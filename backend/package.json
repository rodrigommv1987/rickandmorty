{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build-server": " babel -d ./dist . -s --ignore node_modules/**/*.js",
    "build": "npm run clean && npm run build-server",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev": "nodemon --exec node_modules/.bin/babel-node index.js",
    "test": "mocha --require @babel/register --require tests/hook.js tests/**/*.test.js -c  --timeout 10000",
    "test:watch": "mocha --watch --require @babel/register --require tests/hook.js tests/**/*.test.js -c  --timeout 10000"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/register": "^7.16.5",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "should": "^13.2.3",
    "sinon": "^12.0.1",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.2",
    "rickmortyapi": "^1.0.0"
  },
  "nodemonConfig": {
    "delay": "2000",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
